@using ProjectManager.Models.Enums

@switch (Value)
{
	case Priority.Low:
		<MudText Color="Color.Info">@GetDisplayName(Priority.Low)</MudText>
		break;
	case Priority.Medium:
		<MudText Color="Color.Warning">@GetDisplayName(Priority.Medium)</MudText>
		break;
	case Priority.High:
		<MudText Color="Color.Error">@GetDisplayName(Priority.High)</MudText>
		break;
	default:
		<MudText>Nieznany priorytet!</MudText>
		break;
}

@code {
	[Parameter, EditorRequired]
	public Priority Value { get; set; }

	public static string? GetDisplayName(Priority priority) => priority switch
	{
		Priority.Low => "Niski",
		Priority.Medium => "Åšredni",
		Priority.High => "Wysoki",
		_ => null
	};

}